/* 整体容器 */
.user-profile-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: var(--background-gradient);
  padding: 30rpx;
  position: relative;
  overflow: hidden;
}

/* 浮动装饰元素 */
.floating-element {
  position: absolute;
  border-radius: 50%;
  opacity: 0.6;
  z-index: 0;
}

.element-1 {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(45deg, var(--primary-color), transparent);
  top: -100rpx;
  right: -100rpx;
  animation: float 15s ease-in-out infinite;
}

.element-2 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(45deg, var(--secondary-color), transparent);
  bottom: 30%;
  left: -80rpx;
  animation: float 12s ease-in-out infinite reverse;
}

.element-3 {
  width: 150rpx;
  height: 150rpx;
  background: linear-gradient(45deg, var(--accent-color), transparent);
  bottom: 10%;
  right: 10%;
  animation: float 10s ease-in-out infinite;
}

@keyframes float {
  0% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-20rpx) rotate(5deg);
  }
  100% {
    transform: translateY(0) rotate(0deg);
  }
}

/* 头像部分 */
.avatar-section {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 50rpx 0;
  position: relative;
  z-index: 1;
}

.avatar-container {
  position: relative;
  width: 150rpx;
  height: 150rpx;
}

.user-avatar-bg {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  border: 4rpx solid var(--primary-color);
  background: linear-gradient(45deg, #ffefba, #ffffff);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar-text {
  font-size: 60rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.avatar-edit {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  background: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

.edit-icon {
  color: white;
  font-size: 28rpx;
}

/* 表单部分 */
.form-section {
  margin-bottom: 30rpx;
  position: relative;
  z-index: 1;
}

.form-group {
  background: var(--card-background);
  border-radius: var(--border-radius);
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--card-shadow);
  border: 6rpx solid rgba(255, 107, 107, 0.3);
}

.form-item {
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.form-input {
  height: 80rpx;
  font-size: 32rpx;
  color: var(--text-color);
  width: 100%;
}

.radio-group {
  display: flex;
  padding: 10rpx 0;
}

.radio-label {
  margin-right: 60rpx;
  font-size: 32rpx;
  color: var(--text-color);
  display: flex;
  align-items: center;
}

.picker-value {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: var(--text-color);
}

/* 保存按钮 */
.button-section {
  margin: 60rpx 0;
  position: relative;
  z-index: 1;
}

.save-btn {
  background: var(--button-gradient);
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s;
}

.save-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}
