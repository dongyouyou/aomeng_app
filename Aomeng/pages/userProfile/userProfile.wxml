<!-- 浮动装饰元素 -->
<view class="floating-element element-1"></view>
<view class="floating-element element-2"></view>
<view class="floating-element element-3"></view>

<view class="user-profile-container">
  <!-- 头像部分 -->
  <view class="avatar-section">
    <view class="avatar-container">
      <view class="user-avatar-bg">
        <text class="avatar-text">{{userInfo.nickname ? userInfo.nickname.substring(0,1) : (userInfo.nickName ? userInfo.nickName.substring(0,1) : '奥')}}</text>
      </view>
      <view class="avatar-edit">
        <text class="edit-icon">✎</text>
      </view>
    </view>
  </view>

  <!-- 表单部分 -->
  <view class="form-section">
    <view class="form-group">
      <view class="form-item">
        <view class="form-label">昵称</view>
        <input class="form-input" type="text" value="{{userInfo.nickname || userInfo.nickName}}" placeholder="输入您的昵称" bindinput="handleNicknameInput" />
      </view>
      
      <view class="form-item">
        <view class="form-label">性别</view>
        <radio-group class="radio-group" bindchange="handleGenderChange">
          <label class="radio-label">
            <radio value="1" checked="{{userInfo.gender == 1}}" />男
          </label>
          <label class="radio-label">
            <radio value="2" checked="{{userInfo.gender == 2}}" />女
          </label>
        </radio-group>
      </view>
    </view>

    <view class="form-group">
      <view class="form-item">
        <view class="form-label">地区</view>
        <picker mode="region" bindchange="handleRegionChange" value="{{region}}">
          <view class="picker-value">
            {{region[0]}} {{region[1]}} {{region[2]}}
          </view>
        </picker>
      </view>
    </view>
  </view>

  <!-- 保存按钮 -->
  <view class="button-section">
    <button class="save-btn" bindtap="saveUserProfile">保存信息</button>
  </view>
</view>
