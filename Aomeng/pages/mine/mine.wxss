/* 整体容器 */
.mine-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(180deg, #B6FFFA 0%, #FFF6BD 100%);
  padding-bottom: 30rpx;
  position: relative;
  width: 100%;
  box-sizing: border-box;
  overflow-x: hidden;
}

/* 页面背景设置 */
page {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
  position: relative;
  background: linear-gradient(180deg, #B6FFFA 0%, #FFF6BD 100%);
}

/* 头部背景 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: linear-gradient(135deg, #74EBD5, #9FACE6);
  z-index: 0;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  opacity: 0.8;
}

/* 添加浮动动画效果 */
@keyframes float {
  0% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
  100% { transform: translateY(0); }
}

@keyframes shine {
  0% { left: -100%; }
  20% { left: 100%; }
  100% { left: 100%; }
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

/* 浮动装饰元素 */
.floating-element {
  position: absolute;
  border-radius: 50%;
  opacity: 0.6;
  z-index: 0;
}

.element-1 {
  top: 15%;
  left: 5%;
  width: 200rpx;
  height: 200rpx;
  background-color: rgba(255, 230, 109, 0.6);
  animation: float 12s ease-in-out infinite;
}

.element-2 {
  top: 35%;
  right: 8%;
  width: 150rpx;
  height: 150rpx;
  background-color: rgba(78, 205, 196, 0.5);
  animation: float 10s ease-in-out infinite;
  animation-delay: 1s;
}

.element-3 {
  bottom: 20%;
  left: 15%;
  width: 180rpx;
  height: 180rpx;
  background-color: rgba(255, 107, 107, 0.4);
  animation: float 8s ease-in-out infinite;
  animation-delay: 2s;
}

/* 用户信息部分 */
.user-info-section {
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 1;
}

.user-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10px);
}

/* 未登录状态 */
.not-login {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.login-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 100%;
}

.login-header {
  margin-bottom: 30rpx;
}

.login-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.login-subtitle {
  font-size: 28rpx;
  color: #888;
  display: block;
}

.login-btn {
  background: linear-gradient(135deg, #74EBD5, #9FACE6);
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
  padding: 14rpx 60rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 6rpx 12rpx rgba(78, 205, 196, 0.3);
  transition: all 0.3s;
  margin-top: 10rpx;
}

.login-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

/* 已登录状态 */
.logged-in {
  display: flex;
  align-items: center;
}

.avatar-container {
  margin-right: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: linear-gradient(45deg, #ffefba, #ffffff);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #74EBD5;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.user-avatar.member-avatar {
  border: 4rpx solid #FFD700;
  box-shadow: 0 0 15rpx rgba(255, 215, 0, 0.5);
}

.crown-icon {
  position: absolute;
  top: -12rpx;
  right: -5rpx;
  font-size: 30rpx;
}

.user-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-name-container {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 6rpx;
}

.user-status {
  display: flex;
  align-items: center;
}

.member-tag {
  font-size: 22rpx;
  padding: 2rpx 10rpx;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: white;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.expire-date {
  font-size: 22rpx;
  color: #666666;
}

.update-profile-btn {
  background: linear-gradient(135deg, #74EBD5, #9FACE6);
  color: white;
  border-radius: 30rpx;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  margin: 0 !important;
  max-width: 180rpx;
  transition: all 0.3s;
}

.btn-icon {
  margin-right: 6rpx;
  font-size: 24rpx;
}

.update-profile-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

/* 功能卡片区域 */
.cards-section {
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  border: 1px solid rgba(0, 0, 0, 0.05);
  position: relative;
  backdrop-filter: blur(10px);
}

/* VIP卡片特殊样式 */
.vip-card {
  background: linear-gradient(135deg, rgba(255, 253, 228, 0.95), rgba(255, 249, 219, 0.95));
  border: 2px solid rgba(255, 215, 0, 0.5);
  box-shadow: 0 10rpx 30rpx rgba(255, 165, 0, 0.15);
  transform: scale(1.02);
  z-index: 2;
}

.vip-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 100 100"><path d="M30,20L50,40L70,20" stroke="rgba(255,215,0,0.2)" fill="none" stroke-width="8" /></svg>');
  background-size: 80rpx 80rpx;
  opacity: 0.5;
  z-index: -1;
}

.card-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
}

.card-left {
  flex: 1;
}

.card-title {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.vip-badge {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-right: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(255, 165, 0, 0.3);
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

/* VIP卡片文字特殊样式 */
.vip-card .title-text {
  color: #8B4513;
  font-size: 34rpx;
}

.vip-card .card-desc {
  color: #8B4513;
  font-weight: 500;
}

.card-desc {
  font-size: 26rpx;
  color: #666666;
}

.asset-value {
  display: flex;
  align-items: center;
  color: #4ECDC4;
  font-weight: bold;
}

.value-number {
  font-size: 36rpx;
  margin-right: 2rpx;
}

.value-unit {
  font-size: 26rpx;
  margin-right: 10rpx;
}

.card-right {
  display: flex;
  align-items: center;
}

.action-button {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: white;
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
  border: none;
  font-weight: bold;
  line-height: 1.4;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(255, 165, 0, 0.3);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
  animation: pulse 2s infinite;
}

.vip-button {
  font-size: 28rpx;
  padding: 12rpx 36rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 165, 0, 0.4);
  background: linear-gradient(135deg, #FFD700, #FF8C00);
  letter-spacing: 2rpx;
}

.action-button::after {
  content: "";
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    to right,
    rgba(255, 255, 255, 0) 0%,
    rgba(255, 255, 255, 0.2) 50%,
    rgba(255, 255, 255, 0) 100%
  );
  transform: rotate(30deg);
  animation: shine 3s infinite;
}

.action-button:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 8rpx rgba(255, 165, 0, 0.3);
}

.card-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #4ECDC4;
  border-right: 3rpx solid #4ECDC4;
  transform: rotate(45deg);
  margin-right: 10rpx;
}

/* 功能列表区域 */
.features-section {
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.feature-group {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  border: 1px solid rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10px);
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 22rpx 25rpx;
  position: relative;
  transition: all 0.3s;
}

.feature-item:active {
  background-color: rgba(78, 205, 196, 0.1);
}

.feature-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 25rpx;
  right: 25rpx;
  bottom: 0;
  height: 1rpx;
  background-color: rgba(0, 0, 0, 0.05);
}

.feature-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.favorite-icon {
  background: linear-gradient(135deg, #FF9966, #FF5E62);
}

.checkin-icon {
  background: linear-gradient(135deg, #4ECDC4, #556270);
}

.redeem-icon {
  background: linear-gradient(135deg, #FFD700, #FFA500);
}

.service-icon {
  background: linear-gradient(135deg, #74EBD5, #9FACE6);
}

.about-icon {
  background: linear-gradient(135deg, #6A11CB, #2575FC);
}

.icon-text {
  font-size: 30rpx;
}

.feature-title {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
}

.feature-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #999;
  border-right: 3rpx solid #999;
  transform: rotate(45deg);
}

/* 退出登录按钮 */
.logout-section {
  padding: 0 30rpx;
  margin: 30rpx 0 80rpx 0; /* 增加底部外边距，确保按钮不会太靠近底部 */
  display: flex;
  justify-content: center;
  position: relative; /* 添加相对定位以便更好控制位置 */
  z-index: 3;
  top: -10rpx; /* 向上偏移10rpx */
}

.logout-btn {
  width: 60% !important;
  background: linear-gradient(135deg, #74EBD5, #9FACE6);
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
  padding: 15rpx 0;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(78, 205, 196, 0.2);
  transition: all 0.3s;
  margin-bottom: 40rpx; /* 添加额外的底部外边距 */
}

.logout-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

/* 登录模态框 */
.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  backdrop-filter: blur(8rpx);
}

.login-modal.show {
  opacity: 1;
  pointer-events: auto;
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.modal-header {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #74EBD5, #9FACE6);
  color: white;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.close-btn {
  font-size: 50rpx;
  line-height: 1;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.2s;
}

.close-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
  transform: scale(0.9);
}

.modal-body {
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 30rpx;
  background: linear-gradient(45deg, #ffefba, #ffffff);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #4ECDC4;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.login-icon-text {
  font-size: 50rpx;
  font-weight: bold;
  color: #4ECDC4;
}

.login-desc {
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 40rpx;
  text-align: center;
}

.phone-auth-btn {
  background: linear-gradient(135deg, #74EBD5, #9FACE6);
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  width: 80%;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.phone-auth-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}
