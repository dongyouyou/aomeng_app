/* 整体容器 */
.membership-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: var(--background-gradient);
  padding: 30rpx;
  position: relative;
  overflow: hidden;
}

/* 防止页面横向滑动但允许纵向滑动 */
page {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
  position: relative;
  background: var(--background-gradient);
}

/* 修复顶部和底部空白区域背景颜色 */
body, html {
  background: var(--background-gradient);
  margin: 0;
  padding: 0;
  min-height: 100%;
}

/* 浮动装饰元素，与英雄库页面保持一致的样式 */
.floating-element {
  position: absolute;
  border-radius: 50%;
  opacity: 0.6;
  z-index: 0;
}

.element-1 {
  top: 10%;
  left: 5%;
  width: 200rpx;
  height: 200rpx;
  background-color: var(--accent-color);
  animation: float 10s ease-in-out infinite;
}

.element-2 {
  top: 30%;
  right: 8%;
  width: 150rpx;
  height: 150rpx;
  background-color: var(--secondary-color);
  animation: float 12s ease-in-out infinite;
  animation-delay: 1s;
}

.element-3 {
  bottom: 15%;
  left: 15%;
  width: 180rpx;
  height: 180rpx;
  background-color: var(--primary-color);
  opacity: 0.4;
  animation: float 8s ease-in-out infinite;
  animation-delay: 2s;
}

@keyframes float {
  0% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
  100% { transform: translateY(0); }
}

/* 会员状态卡片 */
.member-status-card {
  background: var(--card-background);
  border-radius: var(--border-radius);
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--card-shadow);
  border: 6rpx solid rgba(255, 107, 107, 0.7);
  position: relative;
  z-index: 1;
  animation: float 6s ease-in-out infinite;
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-title {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-color);
}

.status-tag {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  color: white;
}

.status-tag.normal {
  background: linear-gradient(135deg, #74EBD5, #9FACE6);
}

.status-tag.member {
  background: linear-gradient(135deg, #FFD700, #FFA500);
}

.status-body {
  display: flex;
  align-items: center;
}

.avatar-section {
  margin-right: 30rpx;
  position: relative;
}

.user-avatar-bg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid var(--primary-color);
  background: linear-gradient(45deg, #ffefba, #ffffff);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.user-avatar-bg.gold-border {
  border: 4rpx solid #FFD700;
}

.avatar-text {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.crown-icon {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  font-size: 30rpx;
}

.status-info {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.expire-date {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 公告部分 */
.announcement-section {
  margin-bottom: 30rpx;
  position: relative;
  z-index: 1;
}

.section-header {
  margin-bottom: 15rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-color);
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 30rpx;
  background: var(--primary-color);
  border-radius: 4rpx;
}

.announcement-card {
  background: var(--card-background);
  border-radius: var(--border-radius);
  padding: 20rpx;
  box-shadow: var(--card-shadow);
  border: 6rpx solid rgba(255, 107, 107, 0.3);
}

.announcement-item {
  padding: 15rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.announcement-item:last-child {
  border-bottom: none;
}

.announcement-date {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.announcement-content {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
}

/* 权益对比部分 */
.benefits-section {
  margin-bottom: 30rpx;
  position: relative;
  z-index: 1;
}

.benefits-comparison {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.benefits-column {
  flex: 1;
  background: var(--card-background);
  border-radius: var(--border-radius);
  overflow: hidden;
  box-shadow: var(--card-shadow);
}

.benefits-column.normal {
  border: 6rpx solid rgba(255, 107, 107, 0.3);
}

.benefits-column.member {
  border: 6rpx solid #FFD700;
}

.benefits-header {
  padding: 20rpx;
  text-align: center;
}

.benefits-column.normal .benefits-header {
  background: linear-gradient(135deg, #74EBD5, #9FACE6);
}

.benefits-column.member .benefits-header {
  background: linear-gradient(135deg, #FFD700, #FFA500);
}

.benefits-title {
  font-size: 30rpx;
  font-weight: bold;
  color: white;
}

.benefits-list {
  padding: 20rpx;
}

.benefit-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.benefit-icon {
  font-size: 24rpx;
  margin-right: 10rpx;
  color: var(--primary-color);
  flex-shrink: 0;
}

.benefits-column.member .benefit-icon {
  color: #FFD700;
}

.benefit-text {
  font-size: 26rpx;
  color: var(--text-color);
  line-height: 1.5;
}

/* 订阅部分 */
.subscription-section {
  margin: 30rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.price-info {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 20rpx;
}

.subscription-btn {
  background: var(--button-gradient);
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  width: 80%;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s;
}

.subscription-btn.renewal {
  background: linear-gradient(135deg, #FFD700, #FFA500);
}

.subscription-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

/* 会员套餐区域 */
.membership-plans {
  padding: 30rpx;
  margin-top: 20rpx;
}

.plan-title {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 30rpx;
}

.plans-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.plan-card {
  position: relative;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border: 2rpx solid #f0f0f0;
}

.plan-card.selected {
  border-color: #FFD700;
  background: rgba(255, 215, 0, 0.05);
  transform: scale(1.02);
  box-shadow: 0 8rpx 20rpx rgba(255, 215, 0, 0.2);
}

.plan-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.plan-price {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFD700;
  margin: 10rpx 0;
}

.plan-desc {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.plan-tag {
  position: absolute;
  top: 0;
  right: 20rpx;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: white;
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 0 0 12rpx 12rpx;
  font-weight: bold;
}

.plan-discount {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  background: rgba(255, 82, 82, 0.1);
  color: #FF5252;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.selection-mark {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 40rpx;
  height: 40rpx;
  background: #FFD700;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 24rpx;
  box-shadow: 0 4rpx 8rpx rgba(255, 215, 0, 0.3);
}

.purchase-btn-container {
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
}

.purchase-btn {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0;
  width: 90%;
  box-shadow: 0 8rpx 16rpx rgba(255, 165, 0, 0.3);
  transition: all 0.3s;
}

.purchase-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(255, 165, 0, 0.3);
}

/* 支付弹窗 */
.payment-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.payment-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 100%;
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  overflow: hidden;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.payment-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
}

.close-btn {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 30rpx;
}

.payment-plan-info {
  text-align: center;
  margin-bottom: 40rpx;
}

.payment-plan-info .plan-name {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-color);
}

.payment-plan-info .plan-price {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFD700;
  margin-top: 10rpx;
}

.payment-methods {
  margin-bottom: 40rpx;
}

.payment-method {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s;
}

.payment-method.selected {
  border-color: #FFD700;
  background: rgba(255, 215, 0, 0.05);
}

.method-icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.wechat {
  background: #09BB07;
}

.alipay {
  background: #1677FF;
}

.method-icon .icon-text {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.method-name {
  flex: 1;
  font-size: 30rpx;
  color: var(--text-color);
}

.method-check {
  color: #FFD700;
  font-size: 40rpx;
  font-weight: bold;
}

.confirm-payment-btn {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0;
  width: 100%;
  margin: 20rpx 0;
  box-shadow: 0 8rpx 16rpx rgba(255, 165, 0, 0.3);
}

.confirm-payment-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(255, 165, 0, 0.3);
}

.payment-terms {
  text-align: center;
  margin-top: 20rpx;
}

.terms-text {
  font-size: 24rpx;
  color: #999;
}
