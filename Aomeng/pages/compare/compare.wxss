.container {
  min-height: 100vh;
  background: var(--background-gradient);
  padding: 0 !important;
  position: relative;
  overflow: hidden;
}

/* 添加装饰元素 */
.container::before {
  content: '';
  position: absolute;
  top: 15%;
  right: 10%;
  width: 50rpx;
  height: 50rpx;
  background: var(--accent-color);
  border-radius: 50%;
  opacity: 0.6;
  animation: float 8s ease-in-out infinite;
  z-index: 1;
}

.container::after {
  content: '';
  position: absolute;
  bottom: 20%;
  left: 8%;
  width: 40rpx;
  height: 40rpx;
  background: var(--primary-color);
  border-radius: 6rpx;
  transform: rotate(45deg);
  opacity: 0.6;
  animation: float 10s ease-in-out infinite;
  animation-delay: 1.5s;
  z-index: 1;
}

.compare-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx 20rpx;
  position: relative;
  z-index: 2;
}

.hero-selector {
  width: 280rpx;
  height: 360rpx;
  background: var(--card-background);
  border-radius: var(--border-radius);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: var(--card-shadow);
  position: relative;
  overflow: hidden;
  border: 6rpx solid transparent;
  transition: all 0.3s;
}

.hero-selector:active {
  transform: scale(0.98);
}

.hero-selector.has-hero {
  padding: 0;
  border-color: var(--primary-color);
  animation: pulse 3s infinite;
}

.hero-selector:nth-child(3).has-hero {
  border-color: var(--secondary-color);
  animation-delay: 1.5s;
}

.hero-image {
  width: 100%;
  height: 280rpx;
  object-fit: contain;
  background: linear-gradient(45deg, #ffefba, #ffffff);
}

.hero-info {
  width: 100%;
  padding: 16rpx;
  background: var(--card-background);
  text-align: center;
  border-top: 3rpx solid rgba(0, 0, 0, 0.05);
}

.hero-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
}

.placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: var(--text-secondary);
  font-size: 28rpx;
}

.plus {
  font-size: 60rpx;
  margin-bottom: 10rpx;
  color: var(--primary-color);
}

.vs-container {
  width: 80rpx;
  height: 80rpx;
  background: var(--button-gradient);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  box-shadow: 0 6rpx 15rpx rgba(255, 107, 107, 0.4);
  position: relative;
  z-index: 10;
}

.vs-text {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 对比数据部分 */
.compare-data {
  padding: 30rpx;
  background: var(--card-background);
  margin: 20rpx;
  border-radius: var(--border-radius);
  box-shadow: var(--card-shadow);
  position: relative;
  z-index: 2;
  border: 4rpx dashed var(--secondary-color);
}

.data-section {
  margin-bottom: 30rpx;
}

.data-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
  text-align: center;
  position: relative;
  display: inline-block;
  padding: 0 20rpx;
}

.data-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 70rpx;
  position: relative;
}

.bar-left {
  background: linear-gradient(90deg, var(--primary-color), #FF9A8B);
  height: 40rpx;
  border-radius: 20rpx 0 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(255, 107, 107, 0.3);
  animation: growLeft 1.5s ease-out forwards;
  transform-origin: right center;
}

.bar-right {
  background: linear-gradient(90deg, #4ECDC4, var(--secondary-color));
  height: 40rpx;
  border-radius: 0 20rpx 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(78, 205, 196, 0.3);
  animation: growRight 1.5s ease-out forwards;
  transform-origin: left center;
}

@keyframes growLeft {
  from {
    transform: scaleX(0);
  }
  to {
    transform: scaleX(1);
  }
}

@keyframes growRight {
  from {
    transform: scaleX(0);
  }
  to {
    transform: scaleX(1);
  }
}

.bar-value {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
  z-index: 2;
}

/* 英雄选择器弹窗 */
.hero-selector-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
  backdrop-filter: blur(5rpx);
}

.hero-selector-modal.show {
  opacity: 1;
  pointer-events: auto;
}

.selector-content {
  width: 90%;
  max-width: 650rpx;
  max-height: 90vh;
  background: white;
  border-radius: var(--border-radius);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  border: 8rpx solid var(--secondary-color);
  animation: bounceIn 0.5s;
}

@keyframes bounceIn {
  0% {
    transform: scale(0.8);
    opacity: 0;
  }
  70% {
    transform: scale(1.05);
    opacity: 1;
  }
  100% {
    transform: scale(1);
  }
}

.selector-header {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: var(--button-gradient);
  color: white;
}

.selector-title {
  font-size: 36rpx;
  font-weight: bold;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  line-height: 1;
}

.hero-grid-container {
  max-height: 70vh;
  padding: 20rpx;
}

.hero-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.hero-item {
  background: var(--card-background);
  border-radius: var(--border-radius);
  padding: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s;
}

.hero-item:active {
  transform: scale(0.95);
  border-color: var(--primary-color);
}

.hero-thumb {
  width: 120rpx;
  height: 120rpx;
  object-fit: contain;
  margin-bottom: 10rpx;
}

.hero-item .hero-name {
  font-size: 24rpx;
  text-align: center;
  color: var(--text-color);
}
